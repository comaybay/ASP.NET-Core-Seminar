@page
@model Demo_Razor.Pages.DemoModel
@{
	string variable = "Wow: " + Model.ImageUrl;
}

<div class="text-center">
	<a href="@Model.ImageUrl">@variable</a>
	<h1 class="display-4">@Model.Header</h1>
	<img style="width:60%; object-fit: contain" src="@Model.ImageUrl" />
	<ul style="margin-top: 1rem">
		@for (int i = 0; i < Model.Numbers.Count; i++)
		{
			string styleAttribute = i == 0 ? "style=font-weight:bold;color:crimson" : "";

			<li @styleAttribute>@Model.Numbers[i]</li>
		}
	</ul>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

